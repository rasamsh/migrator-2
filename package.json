{
  "name": "browserjs-to-playwright-bdd",
  "version": "1.0.0",
  "description": "Convert Browser JS tests to Playwright BDD (Cucumber/Gherkin)",
  "type": "module",
  "bin": {
    "browserjs-to-playwright-bdd": "./bin/cli.js",
    "bjs2pw-bdd": "./bin/cli.js"
  },
  "scripts": {
    "migrate": "node bin/cli.js",
    "test": "npx bddgen && playwright test",
    "test:headed": "npx bddgen && playwright test --headed",
    "test:ui": "npx bddgen && playwright test --ui",
    "test:debug": "npx bddgen && playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@cucumber/cucumber": "^10.3.1",
    "playwright-bdd": "^6.6.0",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "glob": "^10.3.10",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
